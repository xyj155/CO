<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <com.scwang.wave.MultiWaveHeader
        android:id="@+id/waveHeader"
        android:layout_width="0dp"
        android:layout_height="130dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:text="个人"
        android:textColor="#fff"
        android:textSize="27sp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <ImageView
        android:id="@+id/tv_send_bug"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:src="@mipmap/user_send_report"
        android:textColor="#fff"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <com.campus.appointment.weight.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/co"
        app:civ_border_color="@color/yellow"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="用户名"
        android:textColor="#000"
        android:textSize="23sp"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toLeftOf="@+id/iv_head"
        app:layout_constraintRight_toRightOf="@+id/iv_head"
        app:layout_constraintTop_toBottomOf="@+id/iv_head" />

    <TextView
        android:id="@+id/user_tv_user_infor"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@mipmap/user_tv_infor_icon"
        android:drawablePadding="8dp"
        android:gravity="center|left"
        android:paddingLeft="15sp"
        android:text="个人信息"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_username" />

    <View
        android:id="@+id/user_tv_user_infor_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#fafafa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_tv_user_infor" />

    <TextView
        android:id="@+id/user_tv_book"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:drawableLeft="@mipmap/user_tv_book_icon"
        android:drawablePadding="8dp"
        android:gravity="center|left"
        android:paddingLeft="15sp"
        android:text="我的动态"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_tv_user_infor_divider" />

    <View
        android:id="@+id/user_tv_book_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#fafafa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_tv_book" />

    <TextView
        android:id="@+id/user_tv_observer"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:drawableLeft="@mipmap/user_tv_observe"
        android:drawablePadding="8dp"
        android:gravity="center|left"
        android:paddingLeft="15sp"
        android:text="我的关注"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_tv_book_divider" />

    <View
        android:id="@+id/user_tv_observer_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#fafafa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_tv_observer" />

    <TextView
        android:id="@+id/user_tv_setting"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:drawableLeft="@mipmap/user_tv_setting_icon"
        android:drawablePadding="8dp"
        android:gravity="center|left"
        android:paddingLeft="15sp"
        android:text="设置"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_tv_observer_divider" />
</android.support.constraint.ConstraintLayout>