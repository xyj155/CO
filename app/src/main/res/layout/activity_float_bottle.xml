<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bottle_bg"
    android:layout_height="match_parent"
    tools:context="com.campus.appointment.ui.activity.FloatBottleActivity">

    <TextView
        android:id="@+id/tv_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:text="匹配"
        android:textColor="#fff"
        android:textSize="27sp"
        app:layout_collapseMode="pin"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />


<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true">

    <com.campus.appointment.weight.randa.RadarViewGroup
        android:id="@+id/radar"
        android:layout_width="320dp"
        android:layout_height="320dp">

        <com.campus.appointment.weight.randa.RadarView
            android:id="@id/id_scan_circle"
            android:layout_width="match_parent"
            android:layout_height="320dp" />
    </com.campus.appointment.weight.randa.RadarViewGroup>
    <com.campus.appointment.weight.CircleImageView
        android:layout_width="50dp"
        app:civ_border_color="@color/blue"
        app:civ_border_width="0.5dp"
        android:id="@+id/iv_head"
        android:layout_height="50dp"
        android:layout_gravity="center"/>
</FrameLayout>


</RelativeLayout>
