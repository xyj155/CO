<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|left"
    android:orientation="horizontal">

    <com.campus.appointment.weight.CircleImageView
        android:id="@+id/circleImageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:src="@mipmap/square_vip" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/aurora_receivetxt_bubble">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_voice"
            android:visibility="gone"
            android:drawablePadding="5dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:text="11''"
            android:drawableLeft="@mipmap/voice_item_left" />
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_main_item_content"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>